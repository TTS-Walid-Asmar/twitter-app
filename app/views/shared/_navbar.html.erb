<% if user_signed_in? %>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= image_tag "elephant.jpg", class: "nav navbar-brand nav-override"%>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav nav-override">
          <li> <%= link_to "Twitter Feed", root_path %></li>
          <li> <%= link_to "New Tweet", new_tweet_path %></li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if current_user.avatar.exists? %>
            <%= image_tag current_user.avatar.url, class: "nav navbar-brand nav-override"%>
          <% else %>
            <%= image_tag "avatar_placeholder.jpg", class: "nav navbar-brand nav-override"%>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <%= current_user.name %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li> <%= link_to "Edit Profile", edit_user_registration_path %></li>
              <li role="separator" class="divider"></li>
              <li> <%= link_to "Sign Out", destroy_user_session_path, method: :delete  %></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
<% end %>
